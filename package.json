{
  "name": "max-heidinger.de",
  "version": "1.0.0",
  "description": "Own personal website",
  "repository": "git@github.com:TheHamloer/max-heidinger.de.git",
  "author": "Max Heidinger <mail@max-heidinger.de>",
  "license": "MIT",
  "scripts": {
    "sass:build": "node-sass-chokidar --output-style=compressed ./scss -o ./css",
    "sass:watch": "node-sass-chokidar --output-style=expanded ./scss -o ./css --watch",
    "server:serve": "browser-sync start --server --port 3000 --files 'css/*.css' --files './*.html'",
    "build": "run-p sass:build",
    "dev": "run-p sass:watch server:serve"
  },
  "devDependencies": {
    "browser-sync": "^2.24.4",
    "node-sass-chokidar": "^1.3.0",
    "npm-run-all": "^4.1.3"
  }
}
